</html>


<script>
    document.addEventListener('DOMContentLoaded', function () {

        // Если должен быть найден один элемент
        if ((e = document.querySelector("#Auth")) !== null)
            e.addEventListener('click', checkForm);
    });


    let checkForm = () => {

        let login = document.getElementById('username').value;
        let password = document.getElementById('pass').value;

        if (login.length < 3) {
            document.getElementById('error_text').textContent = 'Логин не может быть менее 3 символов';
        } else if (password.length < 3) {
            document.getElementById('error_text').textContent = 'Пароль не может быть менее 3 символов';
        } else {
            let auth = send(login, password);
        }
    }


    let send = (login, password) => {
        $.ajax({
            url: 'auth/entrance',
            method: 'POST',
            data: {
                login: login,
                password: password
            }
        })
            .done(function (result) {
                result = JSON.parse(result)
                if (result.response) {
                  location.href = '/';
                } else {
                    document.getElementById('error_text').textContent = 'Неверный логин или пароль';
                }



            });

    }

   document.addEventListener('keypress', (event) => {
        const keyName = event.key;
         if(keyName == 'Enter') {
             checkForm();
         }
        // alert('keypress event\n\n' + 'key: ' + keyName);
    })


    document.body.addEventListener(
        "load",
        (e) => {
            if (e.target.tagName != "IMG") {
                return;
            }
            // Remove the blurry placeholder.
            e.target.style.backgroundImage = "none";
        },
        /* capture */ true
    );

</script>
