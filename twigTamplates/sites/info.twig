                if (document.getElementById('site_status')) {
                    data.site_status = document.getElementById('site_status').value;
                }
                if (document.getElementById('processing')) {
                    data.processing = document.getElementById('processing').value;
                }
                if (document.getElementById('level')) {
                    data.level = document.getElementById('level').value;
                }
                if (document.getElementById('addr')) {
                    data.addr = document.getElementById('addr').value;
                }
                if (document.getElementById('company_name')) {
                    data.company_name = document.getElementById('company_name').value;
                }
                if (document.getElementById('company_type')) {
                    data.company_type = document.getElementById('company_type').value;
                }
                if (document.getElementById('employee_quant')) {
                    data.employee_quant = document.getElementById('employee_quant').value;
                }
                if (document.getElementById('phone')) {
                    data.phone = document.getElementById('phone').value;
                }
                if (document.getElementById('site_addr')) {
                    data.site_addr = document.getElementById('site_addr').value;
                }
                if (document.getElementById('email')) {
                    data.email = document.getElementById('email').value;
                }
                if (document.getElementById('text_city')) {
                    data.text_city = document.getElementById('text_city').value;
                }
                if (document.getElementById('misc')) {
                    data.misc = tinymce.get('misc').getContent()
                }
                if (document.getElementById('irb_approval')) {
                    data.irb_approval = tinymce.get('irb_approval').getContent()
                }
                if (document.getElementById('work_status_manager')) {
                    data.work_status_manager = document.getElementById('work_status_manager').value;
