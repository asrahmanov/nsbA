<div class="main-content" id="app" xmlns="http://www.w3.org/1999/html">
    <div class="content-wrapper">
        <section id="file-export">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title"><h2>Информация по сайту NBS №: {{ sites.site_code | raw }}</h2></h4>
                        </div>
                        <div class="card-content ">
                            <div class="card-body card-dashboard ">
                                <div class="row">
                                    <div class="col-md-6 col-sm-12">

                                        <div class="form-group">
                                            <label for="site_name">Сайт</label>
                                            {% if role == '4' or role == '6' %}
                                                <input type="text" id="site_name" class="form-control"
                                                       value="{{ sites.site_name }}">
                                            {% else %}

                                                <div>{{ sites.site_name | raw }}</div>
                                            {% endif %}


                                        </div>


                                        <div class="form-group">
                                            <label for="site_type">Тип</label>

                                            {% if role == '4' or role == '6' %}
                                                <select class="form-control" id="site_type">
                                                    <option value="0">Выберите тип сайта</option>
                                                    {% for item in siteType %}
                                                        <option value="{{ item.site_type_id }}"
                                                                {% if sites.site_type == item.site_type_id %}
                                                                    selected
                                                                {% endif %}
                                                        >{{ item.site_type }} </option>
                                                    {% endfor %}
                                                </select>
                                            {% else %}

                                                <div>
                                                    {% for item in siteType %}
                                                        {% if sites.site_type == item.site_type_id %}
                                                            {{ item.site_type }}
                                                        {% endif %}
                                                    {% endfor %}
                                                </div>
                                            {% endif %}


                                        </div>


                                        <div class="form-group">
                                            <label for="Город">Город</label>

                                            {% if role == '4' or role == '6' %}
                                            <select class="form-control" id="city">
                                                <option value="0">Выберите город</option>
                                                {% for item in сities %}
                                                <option value="{{ item.city_id }}"
                                                        {% if sites.city == item.city_id %}
                                                        selected
                                                        {% endif %}
                                                >{{ item.city_name }} </option>
                                                {% endfor %}
                                            </select>
                                            {% else %}

                                            <div>
                                                {% for item in сities %}
                                                {% if sites.city == item.city_id %}
                                                {{ item.city_name }}
                                                {% endif %}
                                                {% endfor %}
                                            </div>
                                            {% endif %}


                                        </div>


                                        <div class="form-group">
                                            <label for="contract">Регуляторика</label>

                                            {% if role == '4' or role == '6' %}
                                                <input type="text" id="contract" class="form-control"
                                                       value="{{ sites.contract }}">
                                            {% else %}

                                                <div>{{ sites.contract | raw }}</div>
                                            {% endif %}

                                        </div>

                                        <div class="form-group">
                                            <label for="term_validity">Срок дейсвия</label>

                                            {% if role == '4' or role == '6' %}
                                                <input type="text" id="term_validity" class="form-control"
                                                       value="{{ sites.term_validity }}">
                                            {% else %}

                                                <div>{{ sites.term_validity | raw }}</div>
                                            {% endif %}


                                        </div>


                                        <div class="form-group">
                                            <label for="approved">ЛЭК/НЭК одобрение</label>

                                            {% if role == '4' or role == '6' %}
                                                <input type="text" id="approved" class="form-control"
                                                       value="{{ sites.approved }}">
                                            {% else %}

                                                <div>{{ sites.approved | raw }}</div>
                                            {% endif %}


                                        </div>

                                        <div class="form-group">
                                            <label for="site_status">Статус сайта</label>

                                            {% if role == '4' or role == '6' %}
                                                <input type="text" id="site_status" class="form-control"
                                                       value="{{ sites.site_status }}">
                                            {% else %}

                                                <div>{{ sites.site_status | raw }}</div>
                                            {% endif %}


                                        </div>


                                    </div>


                                    <div class="col-md-6 col-sm-12">


                                        <div class="form-group">
                                            <label for="irb_approval">Особенности</label>

                                            {% if role == '4' or role == '6' %}
                                                <textarea name="" id="irb_approval" id="" cols="30" rows="10">
                                                {{ sites.irb_approval }}
                                            </textarea>
                                            {% else %}

                                                <div>{{ sites.irb_approval | raw }}</div>
                                            {% endif %}


                                        </div>


                                        <div class="form-group">
                                            <label for="level">Уровень</label>

                                            {% if role == '4' or role == '6' or  department_id == '4' %}
                                                <input type="text" id="level" class="form-control"
                                                       value="{{ sites.level }}">
                                            {% else %}

                                                <div>{{ sites.level | raw }}</div>
                                            {% endif %}

                                        </div>


                                        <div class="form-group">
                                            <label for="processing">Кто процессирует</label>

                                            {% if role == '4' or role == '6' or  department_id == '4' %}
                                                <input type="text" id="processing" class="form-control"
                                                       value="{{ sites.processing }}">
                                            {% else %}

                                                <div>{{ sites.processing | raw }}</div>
                                            {% endif %}


                                        </div>

                                        <div class="form-group">
                                            <label for="misc"> Ответственный за процессинг</label>

                                            {% if role == '4' or role == '6' or  department_id == '4' %}
                                                <textarea name="" id="misc" id="" cols="30" rows="10">
                                             {{ sites.misc }}
                                             </textarea>
                                            {% else %}

                                                <div>{{ sites.misc | raw }}</div>
                                            {% endif %}


                                        </div>

                                        <div class="form-group">
                                            <label for="level_id">Уровень лаборатории New</label>
                                            {% if user_id == '32' %}
                                                <select name="" id="level_id" class="form-control">
                                                    <option value="0">Выберите уровень</option>
                                                    {% for level in lab_levels %}
                                                        <option value="{{ level.id }}" {% if site_lab_level.id == level.id %} selected {% endif %}>{{ level.level_name }}</option>
                                                    {% endfor %}
                                                </select>
                                            {% else %}
                                                <div>{{ site_lab_level.level_name | raw }}</div>
                                            {% endif %}
                                        </div>

                                    </div>


                                </div>


                                {# Дополнительный блок бывшие данные из битрикс редактирует менеджер #}
                                <div class="row">
                                    <div class="col-md-6 col-sm-12">
                                        <div class="form-group">
                                            <label for="addr">Адрес</label>
                                            {% if role == '3' or role == '4' or role == '6' or department_id == '4' or role == '8' %}
                                                <input type="text" class="form-control" id="addr"
                                                       value="{{ sites.addr }}">
                                            {% else %}
                                                <div>{{ sites.addr | raw }}</div>
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-12">
                                        <div class="form-group">
                                            <label for="company_name">Название компании</label>
