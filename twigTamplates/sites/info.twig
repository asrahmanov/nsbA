                if (document.getElementById('work_comment_manager')) {
                    data.work_comment_manager = document.getElementById('work_comment_manager').value;
                }
                if (document.getElementById('work_status_auditor')) {
                    data.work_status_auditor = document.getElementById('work_status_auditor').value;
                }
                // if (document.getElementById('work_comment_auditor')) {
                //     data.work_comment_auditor = document.getElementById('work_comment_auditor').value;
                // }
                if (document.getElementById('work_comment_auditor')) {
                    data.work_comment_auditor = tinymce.get('work_comment_auditor').getContent()
                }
                if (document.getElementById('work_comment_manager')) {
                    data.work_comment_manager = tinymce.get('work_comment_manager').getContent()
                }
                if (document.getElementById('level_id')) {
                    data.level_id = document.getElementById('level_id').value
                }

                if (!error) {
                    $.post({
                        url: '/sites/save/',
                        data: data
                    }).done(function (res) {
                        toastr.success('Данные сохранены');
                    });
                }
            }
        }

        if (document.getElementById('form-button-save-fixed')) {
            document.getElementById('form-button-save-fixed').addEventListener('click', () => {
                saveOrder();
            });
        }

        if (document.getElementById('save_manager')) {
            document.getElementById('save_manager').addEventListener('click', () => {
                saveManager();
            });
        }


        let eventBtnDell = () => {
            let btn = document.querySelectorAll('.btn-dell-site');
            let btns = [...btn];
            btns.forEach(el => {
                el.addEventListener('click', (e) => {

                    $.ajax({
                        url: '/ManagerSites/dell/',
                        method: 'POST',
                        data: {
                            id: el.dataset.id
                        }
                    })
                        .done(function (res) {
                            loadManagersTable();
                        })
                })

            })
        }


        let loadManagersTable = () => {

            if (document.getElementById('managers')) {

                let site_id = `{{ sites.site_id }}`;
                $.ajax({
                    url: '/ManagerSites/getSiteManagerbySites/',
                    method: 'POST',
                    data: {
                        site_id: site_id
                    }
                })
                    .done(function (res) {
                        let data = JSON.parse(res);
                        let managers = document.getElementById('managers');
                        let infoTable = '';
                        data.result.forEach(el => {
                            infoTable += `
                    <tr>
                        <td>${el.lasttname} ${el.firstname}  ${el.patronymic}</td>
                        <td>
                         <button class="btn btn-danger btn-success btn-sm btn-dell-site" type="button" data-id='${el.id}'>
                          <i class="ft-delete btn-dell"  ></i>
                         </button>
                        </td>
                    </tr>
                    `;
                        })

                        managers.innerHTML = `<table class="table">
                <tr>
                <td>ФИО</td>
                <td>Действие</td>
                <tr>
                 ${infoTable}
                </table>`;

                        eventBtnDell();

                    });
            }

        }

        loadManagersTable();


        let saveManager = () => {

            let site_id = `{{ sites.site_id }}`;
            let user_id = document.getElementById('manager_id').value;

            if (user_id == 0) {
                toastr.error('Выберите менеджера');
            } else {

                $.ajax({
                    url: '/ManagerSites/save/',
                    method: 'POST',
                    data: {
                        user_id: user_id,
                        site_id: site_id
                    }
                })
                    .done(function (res) {
                        if (res > 0) {
                            toastr.success('Успешно', ' Добавлен');
                            loadManagersTable();
                        } else {
                            toastr.info('Ошибка', 'Такой Менеджер уже есть');
                        }
                    });

            }
        }

        $("#auditor_confirm").click(() => {
            $.post({
                url: '/sites/save/',
                data: {site_id: site_id, auditor_confirm: 1}
            }).done(() => {
                toastr.info('Подтверждено')
                $("#auditor_checkbox").prop('checked', true)
            })
        })
        $("#manager_confirm").click(() => {
            $.post({
                url: '/sites/save/',
                data: {site_id: site_id, manager_confirm: 1}
            }).done(() => {
                toastr.info('Подтверждено')
                $("#manager_checkbox").prop('checked', true)
            })
        })

    })

</script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        let loadContacts = () => {
            let role = `{{ role }}`;
            if (document.getElementById('site_contacts')) {
                let site_id = `{{ sites.site_id }}`;
                $.post({
                    url: '/CompaniesContacts/getSiteContactsBySiteId/',
                    data: {
                        site_id: site_id
                    }
                }).done(function (res) {
                    let data = JSON.parse(res);
                    let contacts = document.getElementById('site_contacts');
                    let infoTable = '';
                    data.result.forEach(el => {
                        infoTable += `
                                <tr>
                                    <td>${el.lastname} ${el.firstname} ${el.patronymic}</td>
                                    <td>${el.contact_type === 'doctor' ? 'Врачи' : 'Администрация ЛПУ'}</td>
                                    <td>
                                     <button class="btn btn-info btn-sm btn-edit-contact" type="button" data-id='${el.id}'>
                                      <i class="ft-edit"></i></button>
                                    </td>
                                    <td>
                                     ${role === '6' ? `<button class="btn btn-danger btn-sm btn-dell-contact" type="button" data-id='${el.id}'>
                                      <i class="ft-delete btn-dell"></i></button>` : ''}
                                    </td>
                                    <td>
                                        <a class="btn btn-info btn-sm"
                                            href="../../sites/generateVCFContactOne/?id=${el.id}"> Android (.vcf)</a>
                                    </td>
                                </tr>`;
                    })
                    contacts.innerHTML = `<table class="table">
                            <tr>
                            <td>ФИО</td>
                            <td>Группа</td>
                            <td>Редактировать</td>
                            <td>${role === '6' ? 'Удалить' : ''}</td>
                            <td>Контакт</td>
                            <tr>
                            ${infoTable}
                            </table>`;
                    eventBtnDell();
                    eventBtnEdit();
                });
            }
        }
        loadContacts();
        let loadSpecials = () => {
            $.post({
                url: '/CompaniesContactsSpecial/getAll/'
            }).done(function (res) {
                let data = JSON.parse(res);
                console.log(data);
                let specials = document.getElementById('contact_special');
                data.result.forEach(el => {
                    specials.innerHTML += `<option value='${el.id}'>${el.special}</option>`;
                });
            });
        }
        loadSpecials();

        let eventBtnDell = () => {
            let btn = document.querySelectorAll('.btn-dell-contact');
            let btns = [...btn];
            btns.forEach(el => {
                el.addEventListener('click', (e) => {
                    $.post({
                        url: '/CompaniesContacts/del/',
                        data: {
                            id: el.dataset.id
                        }
                    }).done(loadContacts)
                })
            })
        }
        let eventBtnEdit = () => {
            let btn = document.querySelectorAll('.btn-edit-contact');
            let btns = [...btn];
            btns.forEach(el => {
                el.addEventListener('click', (e) => {
                    $.get({
                        url: '/CompaniesContacts/getone/',
                        cache: false,
                        data: {
                            id: el.dataset.id
                        }
                    }).done((res) => {
                        let Response = JSON.parse(res)
                        let data = Response.result;
                        $("#contact_id").val(data.id)
                        $("#firstname").val(data.firstname)
                        $("#lastname").val(data.lastname)
                        $("#patronymic").val(data.patronymic)
                        $("#contact_type").val(data.contact_type)
                        $("#job").val(data.job)
                        $("#contact_source").val(data.contact_source)
                        $("#work_phone").val(data.work_phone)
                        $("#home_phone").val(data.home_phone)
                        $("#other_phone").val(data.other_phone)
                        $("#work_email").val(data.work_email)
                        $("#manager_point").val(data.manager_point)
                        $("#order_point").val(data.order_point)
                        $("#nbs_point").val(data.nbs_point)
                        $("#home_email").val(data.home_email)
                        $("#address").val(data.address)
                        $("#comment").val(data.comment)
                        $("#nosology").val(data.nosology)
                        $("#contact_special").val(data.special_id)
                        $("#active").prop('checked', data.active)
                        $("#civil_contract").prop('checked', data.civil_contract)
                        $("#newsletter").prop('checked', data.newsletter)
                        $("#quotable").prop('checked', data.quotable)
                        $("#tr_modal").modal('show')
                    });
                })
            })
        }

        $("#btn_new_contact").click(() => {
            $(".modal-dialog input").val('').prop('checked', false)
            $("#tr_modal").modal('show')
        });

        $("#save_contact").click(() => {
            let firstname = $("#firstname").val(), lastname = $("#lastname").val(), patronymic = $("#patronymic").val(),
                job = $("#job").val(), home_phone = $("#home_phone").val(), work_email = $("#work_email").val(),
                quotable = (home_phone && work_email) ? 1 : 0
            if ($("#quotable").length)
                quotable = $("#quotable").prop('checked') ? 1 : 0
            $.post({
                url: '/CompaniesContacts/save/',
                data: {
                    id: $("#contact_id").val(),
                    company_id: `{{ sites.site_id }}`,
                    firstname, lastname, patronymic,
                    contact_type: $("#contact_type").val(),
                    job,
                    contact_source: $("#contact_source").val(),
                    work_phone: $("#work_phone").val(),
                    home_phone,
                    other_phone: $("#other_phone").val(),
                    work_email,
                    home_email: $("#home_email").val(),
                    address: $("#address").val(),
                    comment: $("#comment").val(),
                    nosology: $("#nosology").val(),
                    active: $("#active").prop('checked') ? 1 : '',
                    civil_contract: $("#civil_contract").prop('checked') ? 1 : '',
                    newsletter: $("#newsletter").prop('checked') ? 1 : '',
                    special_id: $("#contact_special").val(),
                    manager_point: $("#manager_point").val(),
                    order_point: $("#order_point").val(),
                    nbs_point: $("#nbs_point").val(),
                    quotable
                }
            }).done(() => {
                $("#tr_modal").modal('hide')
                loadContacts()
            })
        })

        if (document.getElementById('company_type')) {
            $.get({
                url: '/sites/gettypes/'
            }).done((res) => {
                let Types = JSON.parse(res)['result']
                Types.forEach((type) => {
                    $("#company_type").append(`<option value="${type.id}">${type.type_name}</option>`)
                });
                $("#company_type").val('{{ sites.company_type }}');
            })
        }

        $(".quotability_toggle").click(e => {
            let tgt = $(e.currentTarget), site_id = `{{ sites.site_id }}`,
                quotable = tgt.prop('checked') ? 1 : 0, data = { site_id, quotable }
            $.post({ url: '/sites/save', data })
        })
    })
</script>
