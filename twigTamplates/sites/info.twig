<script>


    document.addEventListener('DOMContentLoaded', function () {


        let role = `{{ role }}`, department_id = `{{ department_id }}`, site_id = `{{ sites.site_id }}`,
            user_id = `{{ user_id }}`


        let saveOrder = () => {
            // console.log(user_id)
            if (department_id === '4' && user_id !== '32') {
                let processing = document.getElementById('processing').value, misc = tinymce.get('misc').getContent(),
                    level = document.getElementById('level').value
                $.post({
                    url: '/sites/save/',
                    data: {
                        site_id: site_id,
                        processing: processing,
                        misc: misc,
                        level: level
                    }
                }).done(toastr.success('Данные сохранены'))
            } else {
                let data = {site_id: site_id}, error = false
                if (document.getElementById('site_type')) {
                    data.site_type = document.getElementById('site_type').value;
                    if (site_type == 0) {
                        toastr.error('Выберите тип сайта');
                        error = true;
                    }
                }
                if (document.getElementById('site_name')) {
                    data.site_name = document.getElementById('site_name').value;
                    if (data.site_name == '') {
                        toastr.error('Введите название сайта');
                        error = true;
                    }
                }
                if (document.getElementById('city')) {
                    data.city = document.getElementById('city').value;
                    if (data.city == 0) {
                        toastr.error('Выберите город');
