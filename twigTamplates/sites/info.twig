                                                <input type="text" class="form-control" id="company_name"
                                                       value="{{ sites.company_name }}">
                                            {% else %}
                                                <div>{{ sites.company_name | raw }}</div>
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-12">
                                        <div class="form-group">
                                            <label for="employee_quant">Кол-во сотрудников</label>
                                            {% if role == '3' or role == '4'  or role == '6' or role == '1' or department_id == '4' or role == '8' %}
                                                <input type="text" class="form-control" id="employee_quant"
                                                       value="{{ sites.employee_quant }}">
                                            {% else %}
                                                <div>{{ sites.employee_quant | raw }}</div>
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-12">
                                        <div class="form-group">
                                            <label for="phone">Рабочий телефон</label>
                                            {% if role == '3' or role == '4'  or role == '6' or role == '1' or department_id == '4' or role == '8' %}
                                                <input type="text" class="form-control" id="phone"
                                                       value="{{ sites.phone }}">
                                            {% else %}
                                                <div>{{ sites.phone | raw }}</div>
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-12">
                                        <div class="form-group">
                                            <label for="site_addr">Корпоративный сайт</label>
                                            {% if role == '3' or role == '4'  or role == '6' or role == '1' or department_id == '4' or role == '8' %}
                                                <input type="text" class="form-control" id="site_addr"
                                                       value="{{ sites.site_addr }}">
                                            {% else %}
                                                <div>{{ sites.site_addr | raw }}</div>
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-12">
                                        <div class="form-group">
                                            <label for="email">Рабочий e-mail</label>
                                            {% if role == '3' or role == '4'  or role == '6' or role == '1' or department_id == '4' or role == '8' %}
                                                <input type="text" class="form-control" id="email"
                                                       value="{{ sites.email }}">
                                            {% else %}
                                                <div>{{ sites.email | raw }}</div>
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-12">
                                        <div class="form-group">
                                            <label for="text_city">Город</label>
                                            {% if role == '3' or role == '4' or role == '6' or department_id == '4' or role == '8' %}
                                                <input type="text" class="form-control" id="text_city"
                                                       value="{{ sites.text_city }}">
                                            {% else %}
                                                <div>{{ sites.text_city | raw }}</div>
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-12">
                                        <div class="form-group">
                                            <label for="company_type">Тип компании</label>
                                            {% if role == '3' or role == '4' or role == '6' or department_id == '4' or role == '8' %}
                                                <select id="company_type" class="form-control"></select>
                                            {% else %}
                                                <div>{{ sites.company_type | raw }}</div>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>


                                {% if role == '3' or role == '4'  or role == '6' or role == '1' or role == '8' or department_id == '4' %}
                                    <div class="row">
                                        <div class="col-6">
                                            <div class="form-group">
                                                <label>Рабочий статус сайта</label>
                                                <select id="work_status_manager" class="form-control">
                                                    <option value="0">Выберите рабочий статус сайта</option>
                                                    <option value="1" {% if sites.work_status_manager == 1 %}  selected {% endif %} >
                                                        Работает
                                                    </option>
                                                    <option value="2" {% if sites.work_status_manager == 2 %} selected {% endif %}>
                                                        Частично работает
                                                    </option>
                                                    <option value="3" {% if sites.work_status_manager == 3 %} selected {% endif %}>
                                                        Не работает
                                                    </option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="form-group">
                                                <label>Комментарий к рабочему статусу</label>
                                                <textarea type="text" class="form-control"
                                                          id="work_comment_manager">{{ sites.work_comment_manager }}</textarea>
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}

                                {% if role == '1'  or role == '6' %}
                                    <div class="row">
                                        <div class="col-6">
                                            <div class="form-group">
                                                <label>Рабочий статус сайта (Аудитор)</label>
                                                <select id="work_status_auditor" class="form-control">
                                                    <option value="0">Выберите рабочий статус сайта</option>
                                                    <option value="1" {% if sites.work_status_auditor == 1 %} selected {% endif %}>
                                                        Работает
                                                    </option>
                                                    <option value="2" {% if sites.work_status_auditor == 2 %} selected {% endif %}>
                                                        Частично работает
                                                    </option>
                                                    <option value="3" {% if sites.work_status_auditor == 3 %} selected {% endif %}>
                                                        Не работает
                                                    </option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="form-group">
                                                <label>Комментарий к рабочему статусу (Аудитор)</label>
                                                <textarea type="text" class="form-control"
                                                          id="work_comment_auditor">{{ sites.work_comment_auditor }}</textarea>
                                            </div>
                                        </div>

                                    </div>
                                {% endif %}

                                {% if role == '4' or role == '6' %}
                                    <div class="row">
                                        <div class="col-2">
                                            <div class="form-group row">
                                                <label class="col-10 col-form-label" for="quotability_toggle">Квотируемый</label>
                                                <div class="col-2">
                                                    <input type='checkbox' class='form-control quotability_toggle'
                                                           id="quotability_toggle"
                                                           {% if sites.quotable == '1' %}checked{% endif %}>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}

                                {% if role == '3' or role == '4' or role == '6' or role == '1' or role == '8' or  department_id == '4' %}
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <button class="btn btn-default btn-success b10" type="button"
                                                    id="form-button-save-fixed">
                                                <i class="fa fa-check"></i>
                                                Сохранить
                                            </button>
                                            {% if role == '1'  or role == '6' %}
                                                <button class="btn btn-default btn-success b10" type="button"
                                                        id="auditor_confirm">
                                                    <i class="fa fa-check"></i>
                                                    Проверено аудитор
                                                </button>
                                            {% endif %}
                                            {% if role == '3' or role == '4'  or role == '6' or role == '1' or role == '8' or department_id == '4' %}
                                                <button class="btn btn-default btn-success b10" type="button"
                                                        id="manager_confirm">
                                                    <i class="fa fa-check"></i>
                                                    Проверено менеджер
                                                </button>
                                            {% endif %}
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        {% if role == '4' or role == '6' or user_id == '55' %}
